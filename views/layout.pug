doctype html
html
  head
    title.layout_title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.layout_nav
      a.layout_a(href="/").header Messenger
      if currentUser
        ul.layout_ul
          li.layout_greeting Hello, #{currentUser.username}
          li.layout_chat_room
            a(href="/chat-room") Chat Room
          li.layout_my_account
              a(href="/visit-profile") My Profile
          li.layout_logout
            a(href="/log-out").logout Logout

      else 
        ul 
          li.layout_login
            a(href="/sign-in") Sign In
          li.layout_signup
            a(href="/sign-up") Sign Up
        
    block content